<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Создание таблицы categories -->
    <changeSet id="1-create-categories" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="categories"/>
            </not>
        </preConditions>
        <createTable tableName="categories">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Создание таблицы products -->
    <changeSet id="2-create-products" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="products"/>
            </not>
        </preConditions>
        <createTable tableName="products">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_product_category"
                             referencedTableName="categories" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Создание таблицы customers -->
    <changeSet id="3-create-customers" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="customers"/>
            </not>
        </preConditions>
        <createTable tableName="customers">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="4-create-orders" author="dev">
        <validCheckSum>9:41793690e165ce741f9f7431261f67a3</validCheckSum>
        <createTable tableName="orders">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_order_customer"
                             referencedTableName="customers" referencedColumnNames="id"/>
            </column>
            <column name="order_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="total_price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Создание таблицы order_items -->
    <changeSet id="5-create-order-items" author="dev">
        <createTable tableName="order_items">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="order_id" type="UUID">
                <constraints nullable="false" foreignKeyName="fk_order_item_order"
                             referencedTableName="orders" referencedColumnNames="id"/>
            </column>
            <column name="product_id" type="INT">
                <constraints nullable="false" foreignKeyName="fk_order_item_product"
                             referencedTableName="products" referencedColumnNames="id"/>
            </column>
            <column name="quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(10, 2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
